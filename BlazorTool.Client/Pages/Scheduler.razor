            var duplicatedAppointment = _clickedAppointment.ShallowCopy();
            duplicatedAppointment.AppointmentId = 0; // Reset ID for new appointment
            CurrentAppointment = duplicatedAppointment;
            customEditFormShown = true;

        }
    }

