        {
            var st = appointments.Select(a => a.WOState).Distinct().ToList();
            foreach(var s in st)
            {
                var status =  new Resource
                {
                    Text = s,
                    Value = s,
                    Color = appointments.FirstOrDefault(a=>a.WOState == s)?.StateColor ?? "LightGray"
                };
                resources.Add(status);
            }            
        }else
            resources = new List<Resource>
